    <script>
        const textarea = document.getElementById('msg');
        
        // Add event listener to clear default message when the user starts typing
        textarea.addEventListener('focus', () => {
            if (textarea.value === 'Write Your Message here...') {
                textarea.value = ''; // Clear the default message
            }
        });
        
        textarea.addEventListener('blur', () => {
            if (textarea.value.trim() === '') {
                textarea.value = 'Write Your Message here...'; // Restore default message if empty
            }
        });
    </script>
