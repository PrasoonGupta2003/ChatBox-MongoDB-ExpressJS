    </nav>
    <div class="page-wrapper">
      <div class="edit-form-container">
        <p>Edit your chat: <%= chat._id %></p>
        <p>
          This chat was sent from <b><%= chat.from %></b> to
          <b><%= chat.to %></b>
        </p>
        <form
          method="post"
          action="/chats/<%= chat._id %>?_method=PUT"
          class="edit-form"
        >
          <textarea name="msg" rows="5" cols="50"><%= chat.msg %></textarea
          ><br />
          <button>Edit</button>
        </form>
      </div>
    </div>

